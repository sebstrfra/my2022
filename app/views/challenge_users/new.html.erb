<div class="container">
    <h1>Add your Friends</h1>
<% if @friendships.present? %>
    <%= simple_form_for [@challenge, @challenge_user] do |f| %>
      <div class="user">
        <%= f.association :user, collection: @friends, label_method: :full_name, label:"Select a friend" %>
      </div>
      <div class="btn-container">
        <%= f.button :submit, "Add", class: "btn btn-warning" %>
      </div>
    <% end %>
    <% else %>
      <p class="sub-heading">You haven't added any friends to your account yet ğŸ˜³ğŸ˜³</p>
    <% end %>
  </div>

<div class="container">
  <h1 class="sub-heading">Who is already in this challenge</h1>
  <div class="goals-list">
    <% @challenge_users.where.not(user:current_user).each do |challenge_user| %>
    <div class="challenge-user-friends-container">
      <%= cl_image_tag challenge_user.user.photo.key, class: "avatar" %>
    </div>
    <% end %>
  </div>
</div>
